<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_gray_transparent"
    android:paddingLeft="@dimen/margin_character_list_items"
    android:paddingTop="@dimen/padding_character_list_items"
    android:paddingBottom="@dimen/padding_character_list_items">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_character_rcSpeciesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/item_character_pbSpeciesList"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/item_character_txtErrorSpeciesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/error_loading_species"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>