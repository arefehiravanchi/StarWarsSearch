<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back_gray_transparent"
    android:paddingLeft= "@dimen/margin_character_list_items"
    android:paddingTop="@dimen/padding_character_list_items"
    android:paddingBottom="@dimen/padding_character_list_items"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/item_movie_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text = "Movie Name" />

    <TextView
        android:id="@+id/item_movie_txtOpeningCrawl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/light_gray"/>

</LinearLayout>